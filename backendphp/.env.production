# ============================================
# Production Environment Configuration
# ============================================

# ============================================
# Database Configuration
# ============================================
# Use MongoDB Atlas for production
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/
MONGODB_DATABASE=your_database_name

API_CONNECTIONS_COLLECTION=api_connections
PARAMETER_MODES_COLLECTION=parameter_modes
API_RUNS_COLLECTION=api_runs
API_SCHEDULES_COLLECTION=api_schedules

MONGODB_QUERY_TIMEOUT_MS=30000
MONGODB_LIMITED_QUERY_TIMEOUT_MS=20000
MONGODB_FIND_TIMEOUT_MS=10000
HTTP_REQUEST_TIMEOUT_SECONDS=60

# ============================================
# Application Configuration
# ============================================
APP_ENV=production
APP_DEBUG=false
APP_PORT=80

# ============================================
# Airflow Configuration (if used in production)
# ============================================
AIRFLOW_SECRET_KEY=your-production-airflow-secret-key
AIRFLOW_DATABASE_NAME=airflow_prod
AIRFLOW_DATABASE_USERNAME=airflow_prod
AIRFLOW_DATABASE_PASSWORD=your-airflow-prod-password
AIRFLOW_EXECUTOR=CeleryExecutor
AIRFLOW_WEBSERVER_HOST=0.0.0.0
AIRFLOW_LOAD_EXAMPLES=false
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=your-secure-admin-password
AIRFLOW_WEBSERVER_URL=https://your-airflow-domain.com

# ============================================
# Security & Performance
# ============================================
CACHE_ENABLED=true
API_RETRY_ATTEMPTS=5
API_TIMEOUT=45

# ============================================
# Logging
# ============================================
LOG_FILE_PATH=/var/log/api-connector/app.log