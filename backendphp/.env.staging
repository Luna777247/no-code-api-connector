# ============================================
# Staging Environment Configuration
# ============================================

# ============================================
# Database Configuration
# ============================================
# Use MongoDB Atlas staging cluster
MONGODB_URI=mongodb+srv://staging-user:staging-password@staging-cluster.mongodb.net/
MONGODB_DATABASE=api_connector_staging

API_CONNECTIONS_COLLECTION=api_connections
PARAMETER_MODES_COLLECTION=parameter_modes
API_RUNS_COLLECTION=api_runs
API_SCHEDULES_COLLECTION=api_schedules

MONGODB_QUERY_TIMEOUT_MS=25000
MONGODB_LIMITED_QUERY_TIMEOUT_MS=15000
MONGODB_FIND_TIMEOUT_MS=8000
HTTP_REQUEST_TIMEOUT_SECONDS=45

# ============================================
# Application Configuration
# ============================================
APP_ENV=staging
APP_DEBUG=false
APP_PORT=80

# ============================================
# Airflow Configuration
# ============================================
AIRFLOW_SECRET_KEY=staging-airflow-secret-key
AIRFLOW_DATABASE_NAME=airflow_staging
AIRFLOW_DATABASE_USERNAME=airflow_staging
AIRFLOW_DATABASE_PASSWORD=staging-airflow-password
AIRFLOW_EXECUTOR=CeleryExecutor
AIRFLOW_WEBSERVER_HOST=0.0.0.0
AIRFLOW_LOAD_EXAMPLES=false
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=staging-admin-password
AIRFLOW_WEBSERVER_URL=https://staging-airflow.yourdomain.com

# ============================================
# Security & Performance
# ============================================
CACHE_ENABLED=true
API_RETRY_ATTEMPTS=3
API_TIMEOUT=30

# ============================================
# Logging
# ============================================
LOG_FILE_PATH=/var/log/api-connector/staging.log